{% if userconversation.lastmessage %}

<div class="d-flex justify-content-between align-items-center last-message">
    {% if userconversation.lastmessage.target.id == app.user.id and not userconversation.lastmessage.seen %}
    	<span class="p-0 m-0 font-italic font-weight-bold">
    		{{ userconversation.lastmessage.owner.id == app.user.id ? 'Vous:' : ''}}
    		<span>
    			{{ userconversation.lastmessage.content|truncate(15) }}
    		</span>
    	</span>
    {% elseif userconversation.lastmessage.target.id == app.user.id and userconversation.lastmessage.seen %}
    	<span class="p-0 m-0 font-italic">
    		{{ userconversation.lastmessage.owner.id == app.user.id ? 'Vous:' : ''}}
    		<span class="text-muted">
    			{{ userconversation.lastmessage.content|truncate(15) }}
    		</span>
    	</span>
    {% else %}
    	<span class="p-0 m-0 font-italic">
    		{{ userconversation.lastmessage.owner.id == app.user.id ? 'Vous:' : ''}}
    		<span class="text-muted">
    			{{ userconversation.lastmessage.content|truncate(15) }}
    		</span>
    	</span>
    {% endif %}

	<small class="ml-2 small conversation-time" data-value="{{ userconversation.lastmessage.createdAt|date('d/m/Y') }}">
		{{ userconversation.lastmessage.createdAt|ago }}
	</small>
</div>

{% endif %}

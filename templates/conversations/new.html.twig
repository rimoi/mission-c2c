{% extends "base.html.twig" %}

{% block title %}Nouvelle conversation{% endblock %}

{% block titre %}Nouvelle conversation{% endblock %}

{% block body %}

<section class="py-5">
	<div class="container">
		<div class="card">
			<div class="card-body">

				<div class="row">

					<div class="col-sm-7 mx-auto">
						<h3 class="text-center h6 pb-3">Nouvelle conversation</h3>
						<div class="row pb-3">
							<div class="col-4 col-sm-3 ml-auto d-flex justify-content-center">
								<div class="text-center">

									{% if app.user.avatar %}
									<img src="{{ app.user.imagePath | imagine_filter('large_avatar') }}"
										class="rounded-circle img-fluid" alt="{{ app.user.nickname }}">

									{% else %}

									<img class="rounded-circle img-fluid"
										src="{{ asset('img/user.jpg') | imagine_filter('large_avatar') }}"
										alt='{{ app.user.nickname }}' />

									{% endif %}

									<strong class="py-3">{{ app.user.nickname }}</strong>
								</div>
							</div>
							<div class="col-4 col-sm-2 text-center">
								<img src="{{ asset('img/message.png') }}" class="img-fluid" alt="">
							</div>
							<div class="col-4 col-sm-3 mr-auto d-flex justify-content-center">
								<div class="text-center">

									{% if vendeur.avatar %}
									<img src="{{ vendeur.imagePath | imagine_filter('large_avatar') }}"
										class="rounded-circle img-fluid" alt="{{ vendeur.nickname }}">

									{% else %}

									<img class="rounded-circle img-fluid"
										src="{{ asset('img/user.jpg') | imagine_filter('large_avatar') }}"
										alt='{{ vendeur.nickname }}' />

									{% endif %}

									<strong class="py-3">{{ vendeur.nickname }}</strong>
								</div>
							</div>
						</div>

						{% if mission %}

						<p class="text-center">Contacter
							<strong>{{ vendeur.nickname }}</strong>
							pour cette mission
						</p>
						<div class="list-group my-3">
							<div class="list-group-item">
								<div class="d-flex">
									<div>
										{% if mission.imageFile %}

										<img class="rounded"
											src="{{ mission.imagePath | imagine_filter('large_avatar') }}" />

										{% else %}<img class="rounded"
											src="{{ asset('themes/base/images/list/v1.png') | imagine_filter('large_avatar') }}" />

										{% endif %}
									</div>
									<div class="ml-4">
										<strong class="d-block">{{ mission.title }}</strong>
                                        <div class="my-2">
                                            {{ mission.content|truncate(170)|raw }}
                                        </div>
                                        <div class="my-2">
                                            {% for tag in mission.tags %}
                                                <a href="#">
                                                    <span class="badge rounded-pill bg-success">{{ tag.name }} </span>

                                                </a>
                                            {% endfor %}
                                        </div>
									</div>
								</div>
							</div>
						</div>

						{% endif %}

						{{ form_start(form, {'attr': {'id': ''}}) }}

						{{ form_errors(form.content) }}

						<div class="form-group text-muted">

							{{ form_widget(form.content, {'attr': {'rows': 5}}) }}

						</div>

						<div class="my-3 text-center">
                            <button id="submit" type="submit" class="btn btn-success btn-block align-items-center">
                                <i class="fa fa-paper-plane"></i>
                                Envoyer
                            </button>
                        </div>

						{{ form_end(form) }}
					</div>

				</div>
			</div>
		</div>
	</div>
</section>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle avis pour la mission {{ mission.title }}{% endblock %}

{% block body %}
    <div class="container">
        <section class="contact-section" id="section_5">
            <div class="row">

                <div class="col-lg-12 col-12">

                    <h2 class="mb-4">Avis</h2>
                </div>

                <div class="col-lg-6 col-12">
                    {{ form_start(form, {'attr': {class: 'custom-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-12">
                            <div class="input-group align-items-center">
                                <label for="first-name">Satisfaction</label>



                                {{ form_widget(form.numberOfStar, {
                                    attr: {
                                        class: 'form-control'
                                    }
                                }) }}
                                {#                                        <input type="text" name="first-name" id="first-name" class="form-control" placeholder="Jack" required>#}
                            </div>
                        </div>
                    </div>

                    <div class="input-group textarea-group">
                        <label for="message">Description</label>

                        {{ form_widget(form.content, {
                            attr: {
                                class: 'form-control',
                                rows: '6',
                                placeholder: 'Ecrivez votre avis...'
                            }
                        }) }}
                    </div>

                    <div class="col-lg-3 col-md-4 col-6">
                        <button type="submit" class="form-control">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="col-lg-6 col-12 mt-5 mt-lg-0">
                    <div class="custom-block text-center">

                        <h3 class="text-white mb-2">Prestation</h3>

                        <div  class="google-map mt-2" width="100%" height="220" >
                            <div class="text-center">
                                <img src="{{ mission.imagePath|imagine_filter('thumbnail_medium') }}" class=" img-fluid" alt="Image {{ mission.title }}">
                            </div>
                            <p class="my-3 text-white mb-2">{{ mission.title }}</p>
                            <p class="mt-2">
                                {{ mission.content|truncate(200)|raw  }}
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}

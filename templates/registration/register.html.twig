{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block description %}
    Ici vous pourrez facilement réserver une mission un accord avec votre recherche. Alors n'hésitez pas à vous connecter ou vous inscrire si ce n'est pas déjà fait !
{% endblock %}

{% block body %}
    <h3 class="text-center my-5">Bienvenue !</h3>

    <div class="row">
        <div class="col-12">
            <div class="container">
                {{ form_start(registrationForm) }}

                <div class="row my-3">
                    <div class="col-12 col-sm-6">
                        {{ form_row(registrationForm.lastname) }}
                    </div>
                    <div class="col-12 col-sm-6">
                        {{ form_row(registrationForm.firstname) }}
                    </div>

                </div>

                <div class="row my-3">
                    <div class="col-12 col-sm-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-12 col-sm-6">
                        {{ form_row(registrationForm.phone) }}
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-6">
                        {{ form_row(registrationForm.imageFile, {label: 'Avatar'}) }}
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-12">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-12">
                        {{ form_row(registrationForm.status) }}
                    </div>
                </div>

                {{ form_row(registrationForm.agreeTerms) }}

                <div class="row my-3">
                    <div class="col-3 col-lg-3 offset-lg-4">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'admin.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table table-borderless">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ mission.updatedAt ? mission.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ mission.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ mission.price }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ mission.slug }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ mission.archived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageFile</th>
                <td>{{ mission.imageFile }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_mission_index') }}">back to list</a>

    <a href="{{ path('admin_mission_edit', {'id': mission.id}) }}">edit</a>

    {{ include('admin/mission/_delete_form.html.twig') }}
{% endblock %}

{% extends 'admin.html.twig' %}

{% block title %}Voir {{ tag.name }}{% endblock %}

{% block body %}

    <h1>{{ block('title') }}</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ tag.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tag.createdAt ? tag.createdAt|ago : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_tag_index') }}">Retour</a>

    <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}">Modifier</a>

    {{ include('admin/tag/_delete_form.html.twig') }}
{% endblock %}
